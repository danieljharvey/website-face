name:               test-site
version:            0.1.0.0
build-type:         Simple
cabal-version:      >= 1.10

executable site
  main-is:          site.hs
  build-depends:    base == 4.*
                  , hakyll == 4.12.*
                  , mtl
  ghc-options:      -threaded
  default-language: Haskell2010

library
  exposed-modules:  LensFace
                  , Eq
                  , Ord
                  , Show
                  , Functor
                  , Monoid
                  , Semigroup
                  , TotalEclipse
                  , Applicative
                  , DoNotation
                  , Free
                  , Write
                  , State
  hs-source-dirs:   code  
  build-depends:    base == 4.*
                  , lens
                  , free
                  , mtl
                  , ilist
  default-language: Haskell2010

test-suite unit-tests
  type:          exitcode-stdio-1.0
  main-is:       Spec.hs
  hs-source-dirs: tests, code
  build-depends: base
                , mtl
                , ilist
                , hspec
                , QuickCheck
                , hspec-discover
